#!/usr/bin/env bash

set -Eeuo pipefail

SCRIPT_DIR="$(cd -- "$(dirname -- "$0")" && pwd)"
ROOT_DIR="$(cd -- "${SCRIPT_DIR}/.." && pwd)"
. "${ROOT_DIR}/lib/common"

REPO_DIR="${REPO_DIR:?REPO_DIR is not set}"

print_help() {
  local cmd="${CMD:-}"
  [[ -z "${cmd}" ]] && cmd="$0"

  cat <<EOF
Usage:
  ${cmd}

Description:
  Print the list of unique commit authors from the entire Git history.

Options:
  --help            Show this help message and exit.

Environment:
  REPO_DIR          (required) Path to the target repository.

Examples:
  REPO_DIR="\$(pwd)" ${cmd}
EOF
}

main() {
  has_flag "--help" "$@" && print_help && exit 0

  local repo_dir
  repo_dir="$(realpath "${REPO_DIR}")"

  is_git_repo "${repo_dir}" || die "'${repo_dir}' is not a git repository"

  GIT log --pretty=format:$'%an <%ae>\n%cn <%ce>' | sort -u
}

main "$@"
